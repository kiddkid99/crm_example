@model CRM.Models.Supply

@{
    ViewBag.Title = "建立";
}

<h2>@ViewBag.Title</h2>


@using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "panel", HttpMethod = "post" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>商品類別</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.SupplyName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SupplyName)
                @Html.ValidationMessageFor(model => model.SupplyName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="建立" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Ajax.ActionLink("回上一頁", "Index", new AjaxOptions { UpdateTargetId = "panel" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
